default namespace axh = "http://www.antennahouse.com/names/XSL/Hyphenations"

hyphenation-info =
  element axh_hyphenation-info {
     axh_hyphenation-info.attlist,
     axh_hyphen-char?,
     axh_exceptions?,
     axh_non-eol-words?
  }

axh_hyphenation-info.attlist &=
   empty

axh_hyphen-char =
   element axh:hyphen-char {
      axh_hyphen-char.attlist,
      empty
}

axh_hyphen-char.attlist &=
   attribute value { text }

axh_exceptions =
   element axh:exceptions {
      axh_exceptions.attlist,
      (text | axh_hyphen)*
}

axh_exceptions.attlist &=
   empty

axh_hyphen =
   element axh:hyphen {
      axh_hyphen.attlist,
      empty
}

axh_hyphen.attlist &=
   attribute pre { text }?

axh_hyphen.attlist &=
   attribute no { text }?

axh_hyphen.attlist &=
   attribute post { text }?

axh_non-eol-words =
   element axh:non-eol-words {
      axh_non-eol-words.attlist,
      text
}

axh_non-eol-words.attlist &= empty
