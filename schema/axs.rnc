default namespace axs = "http://www.antennahouse.com/names/XSL/Settings"

axs_pdf-settings =
  element axs:pdf-settings {
     axs_pdf-settings.attlist,
     axs_embed-font*
  }

axs_pdf-settings.attlist =
   attribute embed-all-fonts { 'true' | 'false' }?

axs_embed-font =
   element axs:embed-font {
      attribute font { text },
      empty
}
